{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run React Router Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Run Wrangler Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "Ready on (https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug Wrangler Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev", "--no-minify"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "VITE_DEV_MODE": "true",
        "DEBUG": "vite:*",
        "WRANGLER_SOURCEMAP": "true",
        "SOURCEMAP": "true"
      },
      "preLaunchTask": "npm: build",
      "serverReadyAction": {
        "pattern": "Ready on (https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "${workspaceFolder}/build/**/*.js",
        "${workspaceFolder}/.wrangler/**/*.js"
      ],
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceFolder}/*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///src/*": "${workspaceFolder}/src/*",
        "webpack:///app/*": "${workspaceFolder}/app/*"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Browser (React Router Dev)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/__vite-root/*": "${webRoot}/*"
      }
    },
    {
      "name": "Debug Browser (Wrangler Dev)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8787",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": ["--disable-background-timer-throttling", "--disable-backgrounding-occluded-windows", "--auto-open-devtools-for-tabs"],
      "sourceMapPathOverrides": {
        "/__vite-root/*": "${webRoot}/*",
        "/*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/app/*": "${webRoot}/app/*",
        "/assets/*": "${webRoot}/assets/*"
      },
      "trace": true,
      "disableNetworkCache": true
    },
    {
      "name": "Debug Full Stack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "Ready on (https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "Enter the port number for React Router Dev server",
      "default": "3000"
    }
  ]
}
